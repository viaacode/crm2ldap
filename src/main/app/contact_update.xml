<?xml version="1.0" encoding="UTF-8"?>

<mule xmlns:validation="http://www.mulesoft.org/schema/mule/validation"
	xmlns:metadata="http://www.mulesoft.org/schema/mule/metadata"
	xmlns:ldap="http://www.mulesoft.org/schema/mule/ldap" xmlns:scripting="http://www.mulesoft.org/schema/mule/scripting"
	xmlns:tracking="http://www.mulesoft.org/schema/mule/ee/tracking"
	xmlns:dw="http://www.mulesoft.org/schema/mule/ee/dw" xmlns="http://www.mulesoft.org/schema/mule/core"
	xmlns:doc="http://www.mulesoft.org/schema/mule/documentation"
	xmlns:spring="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-current.xsd
http://www.mulesoft.org/schema/mule/core http://www.mulesoft.org/schema/mule/core/current/mule.xsd
http://www.mulesoft.org/schema/mule/ee/dw http://www.mulesoft.org/schema/mule/ee/dw/current/dw.xsd
http://www.mulesoft.org/schema/mule/ee/tracking http://www.mulesoft.org/schema/mule/ee/tracking/current/mule-tracking-ee.xsd
http://www.mulesoft.org/schema/mule/scripting http://www.mulesoft.org/schema/mule/scripting/current/mule-scripting.xsd
http://www.mulesoft.org/schema/mule/ldap http://www.mulesoft.org/schema/mule/ldap/current/mule-ldap.xsd
http://www.mulesoft.org/schema/mule/validation http://www.mulesoft.org/schema/mule/validation/current/mule-validation.xsd">
	<sub-flow name="contact_update">
		<logger
			message="Webhook received from Team Leader : #[message.payloadAs(java.lang.String)]"
			level="INFO" doc:name="Log Input Data" />
		<dw:transform-message doc:name="JSON to JAVA">
			<dw:set-payload><![CDATA[%dw 1.0
%output application/java
---
payload]]></dw:set-payload>
		</dw:transform-message>
		<flow-ref name="set_variables" doc:name="set_variables" />
		<flow-ref name="ldap_check_if_contact_excists" doc:name="ldap_check_if_contact_excists" />
		<choice doc:name="Excists?">
			<when expression="#[flowVars.ldap_contact_excists == false]">
				<logger level="INFO" doc:name="FALSE- Stop"
					message="Contact does not excists in LDAP" />
				<set-variable variableName="result"
					value="Contact does not excists in LDAP" doc:name="Variable - result" />
			</when>
			<otherwise>
				<set-variable variableName="contact_id" value="#[flowVars.object_id]"
					doc:name="Set contact_id" />
				<flow-ref name="get_contact" doc:name="Get CRM Contact" />
				<flow-ref name="contact_check_required_fields" doc:name="contact_check_required_fields" />
				<flow-ref name="contact_get_or_number_from_company"
					doc:name="contact_get_or_number_from_company" />
				<set-variable variableName="state" value="LDAP_BEFORE_UPDATE"
					doc:name="Variable - state" />
				<flow-ref name="log_elastic_search" doc:name="log_elastic_search" />
				<foreach collection="#[flowVars.ldap_contacts]" doc:name="For Each - ldap_contact">
					<set-variable variableName="ldap_dn" value="#[payload.getDn()]"
						doc:name="Variable - ldap_dn" />
					<set-variable variableName="ldap_mail"
						value="#[(payload.getAttributes()).getAttribute(&quot;mail&quot;).value]"
						doc:name="Variable - ldap_mail" />
					<choice doc:name="Check if ldap givenName exists and crm forename is empty">
						<when
							expression="#[payload.getAttributes().getAttribute(&quot;givenName&quot;) != null &amp;&amp; (contact.forename == null || contact.forename == &quot;&quot;)]">
							<ldap:delete-single-value-attribute
								config-ref="LDAP_Configuration" dn="#[flowVars.ldap_dn]"
								attributeName="givenName"
								attributeValue="#[payload.getAttributes().getAttribute(&quot;givenName&quot;).getValue()]"
								doc:name="YES - Delete LDAP Attribute givenName" />
						</when>
						<otherwise>
							<logger message="Default Do Nothing" level="INFO"
								doc:name="No - Do nothing" />
						</otherwise>
					</choice>
					<flow-ref name="ldap_contact_entry_to_update" doc:name="ldap_contact_entry_to_update" />
					<ldap:modify config-ref="LDAP_Configuration" doc:name="LDAP Modify" />
					<choice doc:name="Check if email has been changed">
						<when expression="#[flowVars.contact.email == flowVars.ldap_mail]">
							<logger message="Email '#[flowVars.contact.email]' did not change"
								level="INFO" doc:name="Email did not change - Do Nothing" />
							<set-variable variableName="result"
								value="LDAP Entry #[flowVars.contact_id] is updated (email did not change)"
								doc:name="Variable - result" />
						</when>
						<otherwise>
							<set-variable variableName="ldap_dn_new"
								value="#[flowVars.ldap_dn.replace(flowVars.ldap_mail, flowVars.contact.email)]"
								doc:name="Variable -ldap_dn_new replace email" />
							<ldap:exists config-ref="LDAP_Configuration" dn="#[flowVars.ldap_dn_new]"
								doc:name="LDAP - New already exists?" />
							<validation:is-true config-ref="Validation_Configuration"
								message="Contact #[flowVars.ldap_dn_new] already exists in LDAP. It is not possible to remane the contact"
								exceptionClass="java.lang.IllegalArgumentException" expression="#[payload == false]"
								doc:name="When exists - Throw Error" />
							<!-- <ldap:rename config-ref="LDAP_Configuration" oldDn="#[flowVars.ldap_dn]" 
								newDn="#[flowVars.ldap_dn_new]" doc:name="LDAP - Rename DN "/> <set-variable 
								variableName="result" value="LDAP Entry #[flowVars.contact_id] updated with 
								new dn number because email address changed" doc:name="Variable - result"/> -->
							<set-variable variableName="ticket_body"
								value="#['Voor de LDAP entry ' + flowVars.ldap_mail + ' is het e-mailadres gewijzigd in Teamleader contact (' + flowVars.contact.id + ') naar ' + flowVars.contact.email + '. Deze wijziging kan niet automatisch worden uitgevoerd door de interface. Pas daarom het e-mailadres handmatig aan in LDAP.']"
								doc:name="ticket_body" />
							<choice doc:name="Choice - environment">
								<when expression="#[flowVars.environment == 'production']">
									<set-variable variableName="ticket_subject"
										value="#['Teamleader: een e-mailadres is gewijzigd']" doc:name="Set ticket_subject for Production" />
								</when>
								<otherwise>
									<set-variable variableName="ticket_subject"
										value="#['Teamleader: een e-mailadres is gewijzigd (TEST)']"
										doc:name="Set ticket_subject for Test" />
								</otherwise>
							</choice>
							<logger
								message="Going to create a Zendesk ticket for the manual change of a contacts email address : #[flowVars.ldap_dn] to #[flowVars.ldap_dn_new]"
								level="INFO" doc:name="Logger" />
							<flow-ref name="zendesk_create_ticket" doc:name="zendesk_create_ticket" />
							<set-variable variableName="result" value="Create a Zendesk ticket for the manual change of a contacts email address : #[flowVars.ldap_dn] to #[flowVars.ldap_dn_new]"
								doc:name="Variable -result" />
						</otherwise>
					</choice>
					<flow-ref name="ldap_contact_check_mail" doc:name="ldap_contact_check_mail" />
				</foreach>
			</otherwise>
		</choice>

		<set-variable variableName="state" value="#['LDAP_CONTACT_UPDATE']"
			doc:name="Variable - state" />
		<flow-ref name="log_elastic_search" doc:name="log_elastic_search" />
	</sub-flow>
</mule>
